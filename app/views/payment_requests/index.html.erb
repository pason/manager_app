<p style="color: green"><%= notice %></p>
<% if alert %>
  <p style="color: red"><%= alert %></p>
<% end %>


<h2>Payment requests</h2>

<table id="payment_requests">
  <tr>
    <th>Amount</th>
    <th>Description</th>
    <th>Requested At</th>
    <th>Action</th>
  </tr>

  <% @payment_requests.each do |payment_request| %>
    <%= render partial: 'payment_request', locals: { payment_request: payment_request } %>
  <% end %>
</table>


